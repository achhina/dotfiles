{
  "name": "neovim-integration",
  "version": "1.0.0",
  "description": "Integrates Neovim with Claude Code via MCP for AI-powered editing",
  "author": {
    "name": "Local Configuration"
  },
  "mcpServers": {
    "neovim": {
      "command": "npx",
      "args": ["-y", "mcp-neovim-server@0.5.2"],
      "env": {
        "ALLOW_SHELL_COMMANDS": "false",
        "NVIM_SOCKET_PATH": "${NVIM_MCP_SOCKET}"
      }
    }
  }
}
